#version 330 core

in vec3 NORMALS;
in vec2 UV;

uniform sampler2D myTextureSampler;
/*system inputs
in vec4 gl_FragCoord;
in bool gl_FrontFacing;
in vec2 gl_PointCoord;
*/
out vec4 color; // Output data

void main(){
  vec3 eyeSpaceLigthDirection = vec3(0.0,1.0,1.0);
  float diffuse = max(0.0, dot(normalize(NORMALS), normalize(eyeSpaceLigthDirection)));
  color = vec4(vec3(0.5).xyz*diffuse, 1.0);
  color.a = 1.0;
}